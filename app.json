{
  "name": "Auto Manga Bot",
  "description": "Telegram Auto Manga Update Bot",
  "repository": "https://github.com/yourusername/yourrepo",
  "keywords": [
    "telegram",
    "bot",
    "manga",
    "automation",
    "python"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Your Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash from my.telegram.org",
      "required": true
    },
    "USER_ID": {
      "description": "Your Telegram User ID (Owner)",
      "required": true
    },
    "DB_URL": {
      "description": "Your MongoDB Connection String",
      "required": true
    },
    "DB_NAME": {
      "description": "Database Name",
      "value": "rex_auto_manga1",
      "required": false
    },
    "CHECK_INTERVAL": {
      "description": "Auto-update check interval in seconds",
      "value": "300",
      "required": false
    },
    "MAX_CHAPTERS": {
      "description": "Max chapters to process per check",
      "value": "5",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
